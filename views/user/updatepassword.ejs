<% layout('./layouts/boilerplate') %>

<div class="container mt-5">
  <h1>Update Password</h1>
  <form
    action="/user/updatepassword/<%= passToUpdate._id %>?_method=PATCH"
    method="post"
    class="p-5"
  >
    <div class="form-group">
      <label for="socialName">Social Name</label>
      <input
        type="text"
        class="form-control"
        id="socialName"
        name="socialName"
        value="<%= passToUpdate.socialName %>"
      />
      <!-- Add 'readonly' attribute to prevent editing of socialName -->
    </div>
    <div class="form-group">
      <label for="socialPassword">New Social Password</label>
      <input
        type="password"
        class="form-control"
        id="socialPassword"
        name="socialPassword"
      />
      <!-- Update 'id' attribute for socialPassword input -->
    </div>
    <button type="submit" class="btn btn-primary mt-2 w-100">Submit</button>
  </form>
  <a href="/user" class="btn btn-link">Home</a>
</div>

<!-- Bootstrap CSS (Assuming Bootstrap is included in your layout) -->
<link
  rel="stylesheet"
  href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
/>
